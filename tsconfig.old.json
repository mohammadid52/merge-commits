{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@contexts/*": ["contexts/*"],
      "@customGraphql/*": ["customGraphql/*"],
      "@customHooks/*": ["customHooks/*"],
      "@graphql/*": ["graphql/*"],
      "@interfaces/*": ["interfaces/*"],
      "@style/*": ["style/*"],
      "@utilities/*": ["utilities/*"],
      "atoms/*": ["components/Atoms/*"],
      "molecules/*": ["components/Molecules/*"],
      "lesson/*": ["components/Lesson/*"],
      "uiComponents/*": ["components/Lesson/UniversalLessonBuilder/UI/UIComponents/*"],
      "@UlbUI/*": ["components/Lesson/UniversalLessonBuilder/UI/*"],
      "@UlbModals/*": ["components/Lesson/UniversalLessonBuilder/UI/ModalDialogs/*"],
      "@UlbBlocks/*": ["components/Lesson/UniversalLessonBlockComponents/Blocks/*"],
      "@dictionary/*": ["dictionary/*"],
      "reducers/*": ["reducers/*"]
    },
    "module": "ESNext",
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "src/custom.d.ts",
    "node_modules/cypress",
    "./cypress/**/*.js",
    "./cypress/**/*.ts",
    "**/*.ts",
    "cypress/component/Everything.cy.tsx"
  ],
  "exclude": ["build", "bin", "routes", "public", "node-modules", "src/aws-exports.js"],
  "types": ["cypress", "@testing-library/cypress"]
}
